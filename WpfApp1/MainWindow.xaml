<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="NumberToStringConverter" Height="400" Width="600">
    <Grid Background="#ffdadada">
        <Border MinWidth="300" Margin="15" Background="White" VerticalAlignment="Center" Padding="20" MaxWidth="750" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Թվերի խմբագրիչ" FontSize="30" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center" />
                <TextBox x:Name ="textBox" ToolTip="Մուտքագրեք թիվը" materialDesign:HintAssist.Hint="Please insert number" Height="45"/>
                <Grid Margin="0 20 0 20" Height="45">
                    <Button HorizontalAlignment="Left" Content="Տալ թիվը տառերով" Click="Button_Click"/>
                    <Button HorizontalAlignment="Right" Content="Հումորային տարբերակ" Click="Joke_Button_Click" />
                </Grid>                
            </StackPanel>
        </Border>
    </Grid>
</Window>
